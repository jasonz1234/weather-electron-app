{
  "name": "yourapp",
  "productName": "YourApp",
  "version": "0.0.7-alpha",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder -w",
    "build-w-arm": "electron-builder -w --arm64",
    "build-l": "electron-builder -l",
    "build-m": "electron-builder -m --universal"
  },
  "build": {
    "asar": true,
    "appId": "com.jasonz1234.yourapp",
    "productName": "YourApp",
    "copyright": "Â©jasonz1234 2025",
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "locales/en-US.pak",
      "locales/zh-??.pak",
      "locales/ja.pak",
      "locales/kn.pak",
      "!**/*.map",
      "!**/test/**",
      "!**/docs/**",
      "!build/**",
      "package.json",
      "node_modules/**/*"
    ],
    "extraMetadata": {
      "dependencies": {}
    },
    "publish": [
      {
        "provider": "github",
        "owner": "jasonz1234",
        "repo": "electron-yourapp"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": true,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "YourApp",
      "include": "build/installer.nsh",
      "multiLanguageInstaller": true,
      "artifactName": "${productName}-${version}-setup.${ext}",
      "license": "LICENSE"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "maintainer": "jasonz1234 150748837+jasonz1234@users.noreply.github.com",
      "icon": "build/icon.png",
      "artifactName": "${productName}-${version}-setup.${ext}",
      "executableName": "your-app"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.utilities",
      "artifactName": "${productName}-${version}-setup.${ext}",
      "icon": "build/icon.icns",
      "executableName": "YourApp"
    },
    "dmg": {
      "background": "build/dmg-background.png",
      "icon": "build/icon.icns",
      "iconSize": 100,
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "keywords": [],
  "author": "jasonz1234",
  "license": "GPL-3.0-only",
  "description": "",
  "devDependencies": {
    "electron": "^36.2.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-log": "^5.4.0",
    "electron-updater": "^6.6.2",
    "fs-extra": "^11.3.0"
  }
}
